{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react",
    "airbnb"
  ],
  "env": {
    "browser": true,
    "jest": true
  },
  "globals": {
    "__DEV__": true,
    "__PROD__": true,
    "__DEBUG__": true,
    "__COVERAGE__": true,
    "__BASENAME__": true
  },
  "rules": {
    "jsx-quotes": [2, "prefer-double"],
    "comma-dangle": ["error", "always-multiline"],
    "semi": [
      2,
      "never"
    ],
    "no-console": ["error", { "allow": ["warn", "error", "info"] }],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "max-len": 0,
    "react/forbid-prop-types": 0,
    "react/no-danger": 0,
    "global-require": 0,
    "import/no-dynamic-require": 0
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack/webpack.config.js"
      }
    }
  }
}
